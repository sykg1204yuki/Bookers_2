<%= render 'users/info', user: @user %>


<%= render 'books/new', book: @book %>


<h1><strong>Books</strong></h1>
<table>
  <tr>
    <th></th>
    <th><strong>Title</strong></th>
    <th><strong>Opinion</strong></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></td> <!--プロフィール画像挿入 attachment_image_tag... -->
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>