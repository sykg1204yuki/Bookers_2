<div class="container text-danger mt-3">
  <% if @book.errors.any? %>
  <div class="errors-message h2">
    <p><%= @book.errors.count %>error prohibited this book from being saved:</p>
  </div>
    <% @book.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
    <% end %>
  <% end %>
</div>


<div class="container mt-3">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'users/info', user: @user %>

      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-lg-8">
      <h1><strong>Books</strong></h1>
      <table class="table table-white">
        <tr>
          <th></th>
          <th><strong>Title</strong></th>
          <th><strong>Opinion</strong></th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></td> <!--プロフィール画像挿入 attachment_image_tag... -->
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
