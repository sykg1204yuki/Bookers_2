<% if flash[:notice] %>
  <section class="notifications text-success">
    <p><%= flash[:notice] %></p>
  </section>
<% end %>



<div class="container mt-3">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/info', user: @user %>

      <%= render 'books/new', book: @new_book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1><strong>Book detail</strong></h1>
      <table class="table table-white">
        <tr>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %><br/>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-success" %>
              <%= link_to 'Destroy', book_path(@book.id), class:"btn btn-danger ml-4", method: :delete, "data-confirm" => "Are you sure?" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>

  </div>
</div>