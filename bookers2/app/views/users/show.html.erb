
<h1><strong>User info</strong></h1>
<%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
<table>
  <tr>
    <th>name</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= @user.introduction %></td>
  </tr>
</table>
<% if @user.id == current_user.id %>
  <p><%= link_to 'プロフィール編集', edit_user_path(@user.id) %></p>
<% end %>


<h1><strong>Books</strong></h1>
<table>
  <tr>
    <th></th>
    <th><strong>Title</strong></th>
    <th><strong>Opinion</strong></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td> <!--プロフィール画像挿入 attachment_image_tag... -->
        <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpeg", size: "60x60" %>
        </td>

      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>

  <% end %>
</table>